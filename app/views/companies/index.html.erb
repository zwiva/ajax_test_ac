<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<%= form_with(model: @company) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<table>
 <thead>
   <tr>
     <th>Content</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody id="companies">
   <% @companies.each do |company| %>
     <tr id="<%= company.id%>"> <%# agrega id para usarlo con una query%>
       <td><%= company.name %></td>
       <td><%= link_to 'Show', company %></td>
       <td><%= link_to 'Edit', edit_company_path(company) %></td>
       <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
     </tr>
   <% end %>
 </tbody>
</table>

